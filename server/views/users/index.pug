html
  head
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
  body

    h1 User
    form.form-group(action="/user/create", method="POST", class="d-flex")
      input.form-control(type="text", name="name")
      button.btn.btn-primary.ml-2 Create
    form(action= "/user/search", method="GET", class="d-flex")
      input.form-control(type="text", name="name")
      button(class="btn btn-primary ml-2") Search
    ul
        each user in users
          li
            span= user.name
              a(href="/user/" + user.id) View